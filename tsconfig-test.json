{
  "$schema": "https://json.schemastore.org/tsconfig",

  "exclude": ["node_modules/*", "./dist/**", "./build-test/**"],

  "compilerOptions": {
    "strict": true,
    "watch": false,
    "sourceMap": true,

    "target": "ES2018",
    "module": "CommonJS",
    "declaration": true,
    "isolatedModules": false,
    "esModuleInterop": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true,

    "rootDir": "./",
    "allowJs": true,

    "outDir": "./build-test",
    "lib": ["ES2018"],
    "paths": {
      "~/*": ["./src/*", "./test/*"]
    }
  }
}
